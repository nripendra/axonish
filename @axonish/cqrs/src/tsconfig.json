{
  "compilerOptions": {
    "noEmit": true,
    "target": "es2015",
    "moduleResolution": "node",
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["dom", "esnext", "es2015", "es2016"]
  },
  "include": ["**/*.ts"],
  "exclude": ["**/node_modules", "**/*.d.ts"]
}
