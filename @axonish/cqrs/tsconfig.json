{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["dom", "esnext", "es2015", "es2016"],
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "baseUrl": ".",
    "composite": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "./dist"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/node_modules", "src/**/*.spec.ts"]
}
